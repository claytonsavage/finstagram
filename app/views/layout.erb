<!doctype html>
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:900" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,700italic,700,300">
    <link rel="stylesheet" href="stylesheets/normalize.css">
    <link rel="stylesheet" href="stylesheets/lib.css">
    <link rel="stylesheet" href="stylesheets/app.css">
</head>
    <body>
        <header class="headermain">
            <div id="maindiv"><h1><a href="/">Finstagram</a></h1></div>
        
            <div class="login-info">
            <% if current_user %>
                <%= current_user.username %>
                <a href="/logout" style="color:black;">Logout</a>
            <% else %>
                <a href="/login" style="color:black;">Login</a>
                <a href="/signup" style="color:black;">Signup</a>
            <% end %>
            </div>
       </header>
       
        <main role="main" style="background-color: white">
            <%= yield %>
        </main>
    </body>
</html>