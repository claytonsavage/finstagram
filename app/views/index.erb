       <header class="headermain"><div id="maindiv"><a href="#">Finstagram</a></div>
       <div class="login-info" style="color:black;">
           <% if current_user %>
               <%= current_user.username %>
               <a href="/logout" style="color:black;">Logout</a>
           <% else %>
               <a href="/login" style="color:black;">Login</a>
               <a href="/signup" style="color:black;">Signup</a>
            <% end %>
       </div>
       </header>
       
        <main role="main">
            <% @posts.each do |post| %>
            <article class="post">
                <div class="user-info">
                        <img style="border-radius:50%; overflow:hidden;" src="<%= post.user.avatar_url %>" alt="<%= post.user.username %>">
                    <h2><%= post.user.username %></h2>
                    <h3><%= post.humanized_time_ago %></h3>
                </div>
                <a class="photo" href="#">
                   <img src="<%= post.photo_url %>" alt="post from <%= post.user.username %>">
                </a>
                <div class="actions">
                    <%= post.like_count %> likes
                        <span class="comment-count"><%= post.comment_count %> comment</span>
                </div>
                <ul class="comments">
                    <% post.comments.each do |comment| %>
                        <li>
                            <p>
                                <b><%= comment.user.username %></b> <%= comment.text %>
                            </p>
                        </li>
                    <% end %>
                </ul>
            </article>
            <% end %>
        </main>